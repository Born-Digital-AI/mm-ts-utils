{
  "name": "mm-ts-utils",
  "version": "1.0.0",
  "description": "Ongoing collection of various personal TypeScript common utils...",
  "main": "dist/main.js",
  "types": "dist/main.d.ts",
  "scripts": {
    "clean": "rimraf dist/*",
    "build": "npm run clean && tsc",
    "test": "cross-env NODE_ENV=test jest --watch --runInBand",
    "prettier": "prettier --write \"{src,scripts}/**/*.{js,jsx,ts,tsx,scss}\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marianmeres/mm-ts-utils.git"
  },
  "author": "Marian Meres <marian@meres.sk>",
  "license": "WTFPL",
  "bugs": {
    "url": "https://github.com/marianmeres/mm-ts-utils/issues"
  },
  "homepage": "https://github.com/marianmeres/mm-ts-utils#readme",
  "dependencies": {
    "lodash": "^4.17.15"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.7.7",
    "@types/jest": "^24.0.25",
    "@types/lodash": "^4.14.149",
    "babel-jest": "^24.9.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.2",
    "cross-env": "^6.0.0",
    "dotenv": "^6.2.0",
    "if-env": "^1.0.4",
    "jest": "^24.9.0",
    "prettier": "^1.18.2",
    "rimraf": "^2.7.1",
    "ts-jest": "^24.2.0",
    "typescript": "^3.7.4"
  },
  "jest": {
    "verbose": false,
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest",
      "^.+\\.jsx?$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/(?!lodash-es/.*)"
    ],
    "testMatch": [
      "**/__tests__/**/*.(ts|tsx|js|jsx)",
      "**/?(*.)(spec|test).(ts|tsx|js|jsx)"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/dist/"
    ],
    "globals": {
      "ts-jest": {
        "diagnostics": false
      },
      "__TESTING__": true
    }
  }
}
